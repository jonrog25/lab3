<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Helper</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Additional custom CSS -->
    
    <link rel="stylesheet" href="/stylesheets/assignmentsStyle.css">

</head>

<body>

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo"><i class="material-icons left">school</i>Grocery Helper</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="assignments"><i class="material-icons left">list</i> Food List</a></li>
                </ul>
            </div>
        </nav>
        <!-- <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
            <li><a href="assignments"><i class="material-icons left">list</i> Assignments</a></li>
        </ul> -->
    </header>


    <!-- Actual page content! -->
    <div class="container">
        <div class="section" id="list">
            <h1></h1>
            <table>
                <thead>

                    <tr>
                        <th>Food Name</th>

                        <th>Amount</th>
                          
                        <th>Description</th> 

                        <th>Store</th>
            
                        <th></th>
                    </tr>

                </thead>
                <tbody>

                    <% for(let i = 0; i<food.length; i++) { %>
                        <tr> 
                            <td> <%= food[i].food_name%></td>
                            <td> <%= food[i].food_amt%></td>
                            <td> <%= food[i].food_desc%></td>
                            <td> <%= food[i].store_name%></td>
                            <td>
                                <a class="btn-small waves-effect waves-light" href="/assignments/<%= food[i].food_id %>">
                                    <i class="material-icons right">edit</i>
                                    Info/Edit
                                </a>
                                <a class="btn-small waves-effect waves-light red" href ="/assignments/<%= food[i].food_id %>/delete"  >
                                    <i class="material-icons right">delete</i>
                                    Delete
                                </a>
                            </td>
                        </tr>

                     <% }%>


                </tbody>
            </table>
        </div>

        <div class="section" id="add">
            <h2>Add a grocery item:</h2>
            <form id="addForm" method = "post" action = "/assignments">
                <div class="row">
                    <div class="input-field col s8">
                        <input type="text" id="foodInput" name="food_name" class="validate" data-length="45" required>
                        <label for="foodInput">Food Name</label>
                    </div>
                    <div class="input-field col s8">
                        <input type="text" id="foodDesct" name="food_desc" class="validate" data-length="45" required>
                        <label for="foodDesct">Food Description</label>
                    </div>
                    <div class="input-field col s4">
                        <input type="number" id="foodAmt" name="food_amt" class="validate" min=0 max=100 required>
                        <label for="foodAmt">Amount</label>

                    </div>

                     <div class="input-field col s6">
                        <select id="store_name" name="store" required>
                            <option value="" disabled selected>Choose your store</option>
                            <option value=1>Trader Joes </option>
                            <option value=2>Shoprite</option>
                            <option value=3>Krogers</option>
                            <option value=4>Stop and Shop</option>
                            <option value=5>Wegmans</option>
                        </select>
                        <label for="store_name">Store:</label>
                    </div>
                   

                
                </div>
                <button class="btn waves-effect waves-light" type="submit">
                    <i class="material-icons right">send</i>
                    Submit
                </button>
            </form>
        </div>
    </div>
    

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script src="/scripts/materializeAutoInit.js"></script>

</body>

</html>